# API Keys
GROQ_API_KEY=your_groq_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Database Configuration
DYNAMODB_ENDPOINT=http://localhost:8000  # For local development
DYNAMODB_CONVERSATIONS_TABLE=ConversationState  # Or loveandlaw-production-conversations for prod
DYNAMODB_PROFILES_TABLE=UserProfiles  # Or loveandlaw-production-profiles for prod
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key  # For Elastic Cloud
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Environment
ENVIRONMENT=development
DEBUG=True

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# API Configuration
API_VERSION=v1
API_PORT=8000

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
METRICS_PORT=9090